<script>
    function showPickupPoint() {
        document.getElementById('pickupBody').style.display = '';
        document.getElementById('droppingBody').style.display = 'none';
        document.getElementById('pickupPoint').classList.add('active');
        document.getElementById('droppingPoint').classList.remove('active');
    }

    function showDroppingPoint() {
        document.getElementById('pickupBody').style.display = 'none';
        document.getElementById('droppingBody').style.display = '';
        document.getElementById('pickupPoint').classList.remove('active');
        document.getElementById('droppingPoint').classList.add('active');
    }
</script>

